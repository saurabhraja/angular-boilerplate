pipeline {
  agent any
  tools {
    git 'localGIT'
    jdk 'localJDK'
    nodejs 'localNode'
  }
  stages{
    stage ('Code Checkout') {
      steps {
        checkout scm
      }
    }
    stage ('Install Dependencies') {
      steps {
        script {
          def USER_INPUT = input (
              message: 'Install Dependencies?',
              parameters: [
                      [
                        $class: 'ChoiceParameterDefinition',
                        choices: ['Yes','No'].join('\n'),
                        name: '',
                        description: ''
                      ]
              ])

          echo "The answer is: ${USER_INPUT}"

          if("${USER_INPUT}" == "Yes") {
              bat '''
                npm install
              '''
          } else {
              echo 'Installation skipped...'
          }
        }
      }
    }
    stage ('Run Tests') {
      steps {
        bat '''
          npm run test:ci
        '''
      }
      post {
          always {
            echo 'Testing complete..'
          }
      }
    }
    stage ('Build Project') {
      steps {
        bat '''
          npm run build --prod
          cp -r dist aws-artifact
        '''
        script {
          zip zipFile: 'angular-boilerplate.zip', archive: false, dir: 'aws-artifact/'
        }
      }
    }
  }
}