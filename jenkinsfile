pipeline {
  agent any
  tools {
    git 'localGIT'
    jdk 'localJDK'
    nodejs 'localNode'
  }
  stages{
    stage ('Code Checkout') {
      steps {
        checkout scm
      }
    }
    stage ('Install Dependencies') {
      steps {
        script {
          def USER_INPUT = input (
              message: 'Do you want to Install Dependencies ?',
              parameters: [
                      [
                        $class: 'ChoiceParameterDefinition',
                        choices: ['Yes','No'].join('\n'),
                        name: 'input',
                        description: ''
                      ]
              ])

          echo "The answer is: ${USER_INPUT}"

          if( "${USER_INPUT}" == "Yes"){
              bat '''
                echo 'Before npm install starts:'
                npm install
              '''
          } else {
              echo 'Installation skipped...'
          }
        }
      }
    }
    stage ('Run Tests') {
      steps {
        bat '''
          npm run test --single-run --browsers Chrome_no_sandbox
        '''
      }
    }
    stage ('Build Project') {
      steps {
        bat '''
          npm run build --prod --build-optimizer
          echo 'This directory contains the following text files:'
          echo.
          dir /b *.txt
        '''
        
      }
    }
  }
}